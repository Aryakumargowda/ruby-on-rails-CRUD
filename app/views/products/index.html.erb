<%=stylesheet_link_tag('product')%>

<div class="notice">
  <% if notice.present? %>
  <p
    class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"
    id="notice"
  >
    <%= notice %>
  </p>
  <% end %>

  <div class="new_title">
    <h1 class="font-bold text-4xl">Products</h1>
  </div>

  <div id="products" class="min-w-full">
    <%= link_to "New product", new_product_path, class: "new" %>
    <div class="tables">
      <table>
        <tr>
          <th>Pd.id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>

        <%= render @products %>
      </table>
    </div>
  </div>
</div>
