<%=stylesheet_link_tag('product')%>

<div class="notice">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Line items</h1>
  </div>

  <div id="products" class="min-w-full">
    <%= link_to "New line item", new_line_item_path, class: "new" %>
    <div class="tables">
      <table>
        <tr>
          <th>List.id</th>
          <th>Ord.id</th>
          <th>Prod.id</th>
          <th>Quantity</th>
          <th>Total Price</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>

        <%= render @line_items %>
      </table>
    </div>
  </div>
</div>
